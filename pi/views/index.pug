extends layout

block content
  div(class='row')
    span
      p Welcome to the Bulletproof Escape Booth
      p Please fill in your details below to make a start

  div(class='row')
    form
      div(class='form-group')
        label(for='name') Email address
        input(type='name', class='form-control', id='name' placeholder='John Doe')
      div(class='form-group')
        label(for='email') Email address
        input(type='email', class='form-control', id='email' placeholder='john@example.com')
        small(id='emailHelp', class='form-text text-muted') We'll never share your email with anyone else.
      div(class='form-check')
        input(type='checkbox', class='form-check-input', id='check')
        label(class='form-check-label', for='check') Check me out
      button(type='submit', class='btn btn-primary') Submit
