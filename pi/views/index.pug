extends layout

block content
  div(class='row')
    span
      p Welcome to the Bulletproof Escape Booth
      p Please fill in your details below to make a start

  div(class='row')
    form
      div(class='form-group')
        label(for='name') Name
        input(type='name', class='form-control', id='name' placeholder='John Doe' required='true')
      div(class='form-group')
        label(for='email') Email address
        input(type='email', class='form-control', id='email' placeholder='john@example.com' required='true')
        small(id='emailHelp', class='form-text text-muted') We'll never share your email with anyone else.
      div(class='form-group')
        label(for='company') Company
        input(type='company', class='form-control', id='company' placeholder='Bulletproof')
      button(type='submit', class='btn btn-primary') Submit
