#!/bin/bash -l

set -e

cd ~/escape-fridge

git branch
echo -n "Please choose a branch... "
read CHALLENGE

if [ "$CHALLENGE" = "" ]; then
  echo Try again
  exit 1
fi


echo "Reset the current branch..."
git reset --hard HEAD

echo "Checking out new branch..."
git checkout $CHALLENGE
git clean -f

echo "Redploying API"
cd api
yarn
yarn run deploy

echo "Setting up pi"
cd ../pi
yarn

cd ~/escape-fridge

echo
echo
echo ' ____           _             _      ____ ___'
echo '|  _ \ ___  ___| |_ __ _ _ __| |_   / ___/ _ \'
echo '| |_) / _ \/ __| __/ _` |  __| __| | |  | (_) |'
echo '|  _ <  __/\__ \ || (_| | |  | |_  | |___\__, |'
echo '|_| \_\___||___/\__\__,_|_|   \__|  \____| /_/'
echo 

echo 'Ctrl-C to exit'
read
