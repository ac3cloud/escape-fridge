#!/bin/sh

set -e

git branch
echo -n "Please choose a branch... "
read CHALLENGE

if [ "$CHALLENGE" = "" ]; then
  echo Try again
  exit 1
fi

cd ~/escape-fridge

echo "Reset the current branch..."
git reset --hard HEAD

echo "Checking out new branch..."
git checkout $CHALLENGE
git clean -f

echo "Redploying API"
cd api
yarn run deploy

echo "Restarting browser"
./admin/bin/browser-tabs
