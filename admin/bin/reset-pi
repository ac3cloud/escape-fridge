#!/bin/sh

set -e

cd ~/escape-fridge

git branch
echo -n "Please choose a branch... "
read CHALLENGE

if [ "$CHALLENGE" = "" ]; then
  echo Try again
  exit 1
fi


echo "Reset the current branch..."
git reset --hard HEAD

echo "Checking out new branch..."
git checkout $CHALLENGE
git clean -f

echo "Redploying API"
cd api
yarn
yarn run deploy

echo "Setting up pi"
cd ../pi
yarn

cd ~/escape-fridge

echo "Restarting browser"
./admin/bin/browser-tabs
