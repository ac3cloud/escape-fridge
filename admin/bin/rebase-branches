#!/bin/sh

set -e

RED=$(tput setaf 1)
GREEN=$(tput setaf 2)
NC=$(tput sgr0)

CUR_BRANCH=$(git rev-parse --abbrev-ref HEAD)

if [ "$CUR_BRANCH" != "master" ]; then
  echo "${RED}Must be in master to rebase${NC}"
  exit 1
fi

echo "${GREEN}Updating master${NC}"
git pull

# temp ignore c9
BRANCHES=$(git branch --list | sed 's/ *//' | grep -E '^c[0-9]+$' | grep -v c9)

echo Updating $BRANCHES
echo

for branch in $BRANCHES; do
  echo "${GREEN}Rebasing $branch${NC}"
  git co $branch
  echo "${GREEN}Force updating branch${NC}"
  git pull -f
  echo "${GREEN}Rebasing branch${NC}"
  git rebase master
  echo "${GREEN}Pushing branch${NC}"
  git push -f

  git co master

  echo
  echo
done
